{
  "extends": "astro/tsconfigs/base",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "lib": ["es2017", "dom"],
    "target": "es2017"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
